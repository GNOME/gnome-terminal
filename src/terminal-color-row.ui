<interface>
  <template class="TerminalColorRow" parent="AdwActionRow">
    <property name="activatable">true</property>
    <child type="suffix">
      <object class="GtkColorButton" id="button">
        <property name="show-editor">1</property>
        <property name="valign">center</property>
        <property name="rgba" bind-source="TerminalColorRow" bind-property="color" bind-flags="bidirectional|sync-create"/>
      </object>
    </child>
  </template>
</interface>

<interface>
  <template class="TerminalShortcutEditor" parent="AdwNavigationPage">
    <property name="title" translatable="yes">Shortcuts</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
          </object>
        </child>
        <property name="content">
          <object class="AdwPreferencesPage" id="page">
            <property name="title" translatable="yes">Shortcuts</property>
            <child>
              <object class="AdwPreferencesGroup">
                <child>
                  <object class="AdwSwitchRow" id="enable_shortcuts">
                    <property name="title" translatable="yes">Enable Shortcuts</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
